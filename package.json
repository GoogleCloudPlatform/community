{
  "private": true,
  "scripts": {
    "lint": "semistandard",
    "build": "node ./bin/build",
    "test": "mocha -t 120000 ./test/*"
  },
  "semistandard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ],
    "ignore": [
      "**/node_modules/**",
      "tutorials/appengine-nodejs-webpack/**",
      "tutorials/cloud-functions-rate-limiting/**"
    ]
  },
  "devDependencies": {
    "mocha": "5.2.0",
    "semistandard": "12.0.1"
  }
}
