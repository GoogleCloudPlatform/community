{
  "private": true,
  "scripts": {
    "lint": "semistandard \"**/*.js\"",
    "test": "npm run lint && mocha --recursive -t 30000"
  },
  "semistandard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ],
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "devDependencies": {
    "mocha": "^2.5.3",
    "semistandard": "^8.0.0"
  }
}
