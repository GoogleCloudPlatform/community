{
  "private": true,
  "scripts": {
    "lint": "semistandard",
    "build": "node ./bin/build",
    "test": "npm run lint && mocha -t 120000 ./test/*"
  },
  "semistandard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ],
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "devDependencies": {
    "mocha": "3.4.2",
    "semistandard": "11.0.0"
  }
}
